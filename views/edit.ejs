<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>

    <!--GOOGLE FONT-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&display=swap" rel="stylesheet">
    <!--ICONS-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="icon" type="image/png" sizes="32x32" href="/public/images/todo-icon.png ">
    <!-- stylesheet link -->
    <link rel="stylesheet" href="/style.css">

</head>

<body>
    <section class="banner-con">
        <section class="banner">
            <!-- <div class="content">
                <h1>TODO</h1>
                <img src="/images/icon-sun.svg" alt="sun icon">
            </div> -->
            <section class="todo-container">
                <h2>Edit List Item</h2>
                <section class="todo">

                    <ul class="todo-list">
                        <% todoTasks.forEach(data=> { %>
                            <% if (data._id==idTask){ %>

                                <li class="todo-list-item">
                                    <form action="/edit/<%= data._id%>" method="POST">
                                        <input type="text" name="title" value="<%=data.title%>">
                                        <textarea name="content" id="" cols=" 45" rows="6"><%=data.content%></textarea>
                                        <button type="submit" class="confirm">Confirm</button>
                                        <a href="/" class="cancel">Cancel</a>
                                    </form>
                                </li>
                                <% }else{ %>

                                    <li class="todo-list-item">
                                        <div class="todo-list-item-title">
                                            <%= data.title %>
                                        </div>
                                        <div class="todo-list-item-content">
                                            <%= data.content %>
                                        </div>
                                        <a href="/edit/<%=data._id %>" class="edit"> <span class="fas fa-edit"></span>
                                        </a>
                                        <a href="/remove/<%=data._id %>" class="remove close"> <img
                                                src="/images/icon-cross.svg" alt="icon cross">
                                        </a>
                                    </li>
                                    <% } %>
                                        <% }) %>
                    </ul>
                </section>
            </section>
        </section>
    </section>

</body>

</html>